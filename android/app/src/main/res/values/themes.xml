<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShareBooster" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_main</item>
        <!-- Error colors. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_main</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.ShareBooster.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.ShareBooster</item>
    </style>

    <!-- Custom Button Styles -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Button.Success" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_success_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Button.Warning" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_warning_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Button.Error" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_error_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Card Styles -->
    <style name="Card.Primary" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/card_primary_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Card.Premium" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/card_premium_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <!-- Text Styles -->
    <style name="Text.Headline" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="Text.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="Text.Subtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Text.Body" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_main</item>
    </style>

    <style name="Text.Caption" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_muted</item>
    </style>

    <!-- Input Styles -->
    <style name="Input.Primary" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/input_primary_background</item>
        <item name="android:textColorHint">@color/text_muted</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Status Badge Styles -->
    <style name="Badge.Premium" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/badge_premium_background</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Badge.Free" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/badge_free_background</item>
        <item name="android:textColor">@color/text_muted</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Badge.Active" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/badge_active_background</item>
        <item name="android:textColor">@color/success</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Badge.Suspended" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/badge_suspended_background</item>
        <item name="android:textColor">@color/warning</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>